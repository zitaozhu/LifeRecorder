<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/location_detailed_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        tools:text="Location" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/location_detailed_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/location_detailed_prompt"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/location_detailed_add_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_comment_this_location" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/location_detailed_comment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>